<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Safad</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Safad.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" style="color: #5966a7;" asp-area="" asp-controller="Home" asp-action="Index">SAFAD</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" style="color: #5966a7;" asp-area="" asp-controller="Home" asp-action="Index">INICIO</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: #5966a7;" asp-area="" asp-controller="Home" asp-action="WhoWeAre">Quiénes Somos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: #5966a7;" asp-area="" asp-controller="Home" asp-action="Contact">Contacto</a>
                        </li>
                        <li class="nav-item ms-auto">
                            <a class="btn bth-primary" style="background-color: #5966a7; border-color: #5966a7; border-radius: 50px; padding: 5px 20px; color: #FFFFFF;" asp-area="" asp-controller="Account" asp-action="Login">Ingreso</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            <p id="aux1">MULTIDIMENSIONAL</p>
            <a class="nav-link" id="aux4" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
            <a class="nav-link" id="aux5" asp-area="" asp-controller="Home" asp-action="WhoWeAre">Quiénes Somos</a>
            <a class="nav-link" id="aux6" asp-area="" asp-controller="Home" asp-action="Contact">Contacto</a>
            <div class="footer-images">
                <img src="~/img/MODELO.png" id="aux2" alt="Imagen 1" class="footer-image">
                <img src="~/img/Pie.png" id="aux3" alt="Imagen 2" class="footer-image">
            </div>
            <div class="social-icons">
                <a href="https://www.facebook.com" target="_blank">
                    <img src="~/img/facebook-icon.png" alt="Facebook" class="social-icon">
                </a>
                <a href="https://www.instagram.com" target="_blank">
                    <img src="~/img/instagram-icon.png" alt="Instagram" class="social-icon">
                </a>
                <a href="https://www.youtube.com" target="_blank">
                    <img src="~/img/youtube-icon.png" alt="YouTube" class="social-icon">
                </a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
