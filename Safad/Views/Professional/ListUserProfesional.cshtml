@{
    Layout = "~/Views/Shared/_LayoutProfesional.cshtml";
}

@model Profesional // Tu modelo que contiene los datos del profesional

<div class="container">
    <h2 class="text-center">Mis Datos</h2> <!-- Centra el encabezado -->
    <div class="row justify-content-center">
        <!-- Centra la fila -->
        <div class="col-md-6">
            <!-- Ajusta el tamaño de la columna -->
            <div class="card">
                <div class="card-body">
                    <div>
                        <label>Nombre Completo: </label>
                        <span>@Model.NameProfesional</span>
                    </div>
                    <div>
                        <label>DNI: </label>
                        <span>@Model.DniProfesional</span>
                    </div>
                    <div>
                        <label>Teléfono: </label>
                        <span>@Model.Cellphone</span>
                    </div>
                    <div>
                        <label>Dirección: </label>
                        <span>@Model.Address</span>
                    </div>
                    <!-- Agrega más campos si es necesario -->
                </div>
                <div class="card-footer text-center">
                    <!-- Botón de Actualizar -->
                    <a asp-controller="Professional" asp-action="EditUserProfesional" asp-route-id="@Model.ProfesionalId" class="btn btn-primary">
                        Actualizar
                    </a>
                    <!-- Botón de Eliminar -->
                    <form asp-controller="Professional" asp-action="DeleteUserProfesional" asp-route-id="@Model.ProfesionalId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('¿Estás seguro de que deseas eliminar este profesional?');">
                            Eliminar
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

